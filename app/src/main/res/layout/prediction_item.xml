<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/time_textview"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="time" />

        <LinearLayout
            android:id="@+id/team"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"

            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/team_A_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:text="vasco da gama" />

            <TextView
                android:id="@+id/team_B_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello" />

        </LinearLayout>


        <TextView
            android:id="@+id/tips_textview"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="TIP"
            android:textSize="18dp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_team1"
            android:layout_width="20dp"
            android:paddingLeft="5dp"

            android:layout_gravity="center"

            app:cardCornerRadius="5dp"
            android:layout_height="20dp" >

            <TextView
                android:id="@+id/team1_percenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="70%"
                android:textSize="10sp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_draw"
            android:layout_width="20dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center"

            app:cardCornerRadius="5dp"
            android:layout_height="20dp"

            >

            <TextView
                android:id="@+id/Draw_percenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="70%"
                android:textSize="10sp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_team2"
            android:layout_width="20dp"
            android:paddingLeft="5dp"


            app:cardCornerRadius="5dp"
            android:layout_gravity="center"
            android:layout_height="20dp" >
            <TextView
                android:id="@+id/team2_percenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="70%"
                android:textSize="10sp" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/NewAccent" />
</LinearLayout>
